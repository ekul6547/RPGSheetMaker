@model RPGSheet2.Models.AddTutorialSection

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>TutorialPage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="PageID" />
            <div class="form-group">
                <label asp-for="Header" class="control-label"></label>
                <input asp-for="Header" class="form-control" />
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group" style="width:100%">
                <label asp-for="HTMLContent" class="control-label"></label>
                @Html.TextAreaFor(model => model.HTMLContent, new { @class = "form-control", @rows = 20 })
                <span asp-validation-for="HTMLContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@Model.PageID">Back to Page</a>
</div>

